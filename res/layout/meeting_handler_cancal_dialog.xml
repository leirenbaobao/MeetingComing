<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialogbk_meeting_cacel" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	 	android:layout_marginTop="15dp" 
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/meeting_handler_cancel_dialog_imgback"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_return"/>
        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
	        android:text="取消会议"
	        android:textSize="@dimen/text_size_middle"
	        android:textColor="@color/txt_deep_gray"
	        />
    </RelativeLayout>
    
    
    <EditText
        android:id="@+id/meeting_handler_cancel_dialog_reason"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="请输入原因"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_input_bg"/>
    
    
    <TextView
        android:id="@+id/meeting_handler_cancel_dialog_sure"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:gravity="center"
        android:background="@drawable/gold_button_style"
        style="@style/TextViewbiggold"/>

</LinearLayout>
