<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbk_meeting_putoff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/meeting_handler_putoff_dialog_imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="推迟会议"
            android:textColor="@color/txt_deep_gray"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

    <EditText
        android:id="@+id/meeting_handler_putoff_dialog_reason"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:hint="请输入原因"
        android:background="@drawable/edit_input_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="新时间选择："
        android:textColor="@color/txt_deep_gray" />
    
    <TimePicker
        android:id="@+id/meeting_handler_putoff_dialog_time"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/edit_input_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/meeting_handler_putoff_dialog_sure"
        style="@style/TextViewbiggold"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gold_button_style"
        android:gravity="center"
        android:text="确定" />

</LinearLayout>
